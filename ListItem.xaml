<UserControl x:Class="ListExample.ListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListExample"
             xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="60" Width="200">
    <MaterialDesign:Card Margin="5">
        <Grid>
            <TextBlock Name="IndexText" Text="#1" Foreground="White" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox IsReadOnly="True" Name="ContentText" Text="Test" Foreground="White" TextWrapping="Wrap" Margin="5,5,5,5" TextAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </MaterialDesign:Card>
</UserControl>
